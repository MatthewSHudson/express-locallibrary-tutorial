extends layout 

block content

  h1 #{title}: #{book.title}

  if allCopiesOfBook.length > 0
    p #[strong You must remove all Copies of a book before removing it.]
    ul
      for copy in allCopiesOfBook
        li
          a(href=copy.url) #{book.title}  (#{copy.imprint})
    
  else 
    p Do you really want to delete this book?

    form(method='POST')
      div.form-group
        input#bookid.form-control(type='hidden' name='bookid' value=book._id)
      button.btn.btn-primary(type='submit') Delete